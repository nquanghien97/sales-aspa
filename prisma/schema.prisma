generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  fullName  String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model HandleRejection {
  id        Int      @id @default(autoincrement())
  category  String
  content   String   @db.LongText()
  createdAt DateTime @default(now())
}
